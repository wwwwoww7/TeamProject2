<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- Annotation을 사용할 수 있도록 설정 -->
	<mvc:annotation-driven/>
	
	<!-- IoC 컨테이너에서 관리해야할 객체를 찾는 설정 -->
	<context:component-scan 
		base-package="com.mycompany.webapp"
		use-default-filters="true">
		<!-- @Service, @Repository 제외 -->	
		<context:exclude-filter type="annotation"
								expression = "org.springframework.stereotype.Service"/>
		<context:exclude-filter type="annotation"
								expression = "org.springframework.stereotype.Repository"/>						
	</context:component-scan>
	
	<!-- View 이름을 JSP로 연결(매핑) 시켜주는 객체
	setter 주입
	 -->
	<bean id="viewResolver1" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="order" value="1"/>
 		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	
	
	
	<!-- DispatcherSerlvet 실행이 필요 없는 resources 경로 설정 -->
	<mvc:resources location="/resources/" mapping="/resources/**"></mvc:resources>	<!-- ** 뒤에 뭐가 오든 상관 없이 -->
	
	
</beans>
